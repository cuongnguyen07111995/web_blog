
<%= form_for :post, url: posts_path do |f| %>
<div class="modal-dialog">
    <div class="modal-content">
    <h1 style="margin-left:20px;color:blue">New Post</h1>
      <div class="modal-header">
      <p>
      <%= f.label :title %><br>
       <%= f.text_field :title %>
     </p>
      </div>
      <div class="modal-body">
        <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
      </div>
      <div class="modal-footer">
         <%= f.submit %>
      </div>
    </div><!-- /.modal-content -->

  </div><!-- /.modal-dialog -->
 <% end %>