  <div class="modal-dialog">
    <div class="modal-content" style="height:150px">
     <h4 style="margin-left:20px;">New post</h4>
     <a href="posts/new" class="btn btn-link btn-block">
      <div class="modal-header">
        <input class="modal-header form-control"placeholder="Title">
      </div>
          </a>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
<% @posts.each do |post| %>
<div class="col-md-4">
   <h1 class="title"> <%= post.title %></h1>
   <p class="date"><%= post.created_at.strftime("%B, %d, %Y")%></p>
    <p class="body"><%= post.text %></p>
    <p><label class="btn btn-default" role="button"><%= link_to 'View details',post_path(post) %>&raquo;</label> </p>
</div>
</div>
<% end %>